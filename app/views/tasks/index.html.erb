<h1>Task List</h1>

<% @tasks.each do |task| %>
  <div>
    <h3><%= task.title %></h3>
    <p><%= task.details %></p>
    <p><%= task.completed ? 'Completed' : 'Not Completed' %></p>

    <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary' %>

    <%= form_with(url: delete_task_path(task), method: :delete, local: true) do |form| %>
      <%= form.submit 'Delete',
                      data: { confirm: 'Are you sure you want to delete this task?' },
                      class: 'btn btn-danger' %>
    <% end %>
  </div>
<% end %>
<%= link_to 'Add task', tasks_new_path %>
